{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: debug",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/projects/app",
            "command": "pnpm dev",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "serverReadyAction": {
                "pattern": "started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        }
    ]
}